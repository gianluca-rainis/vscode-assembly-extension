{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "autoCloseBefore": ";:.,=}])> \n\t",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*:)?\\b"
  },
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b|0x[0-9a-fA-F]+|\\d+"
}
