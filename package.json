{
  "name": "assembly",
  "displayName": "Z80 Assembly",
  "description": "Color theme and error detector for the Z80 Assembly language.",
  "version": "0.0.1",
  "icon": "icon.png",
  "author": {
    "name": "Gianluca Rainis",
    "email": "gianlucarainis@gmail.com",
    "url": "https://github.com/gianluca-rainis"
  },
  "maintainers": ["Gianluca Rainis"],
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": ["onLanguage:assembly"],
  "repository": {
    "url": "https://github.com/gianluca-rainis/vscode-assembly-extension",
    "type": "git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      
    ],
    "languages": [{
      "id": "assembly",
      "extensions": [".s", ".asm"],
      "aliases": ["Z80 Assembly", "Z80", "Assembly", "assembly"],
      "filenames": [],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "assembly",
      "scopeName": "source.assembly",
      "path": "./syntaxes/assembly.tmLanguage.json"
    }],
    "themes": [{
      "label": "Z80 Assembly Dark",
      "uiTheme": "vs-dark",
      "path": "./themes/assembly-dark.json"
    },
    {
      "label": "Z80 Assembly Light",
      "uiTheme": "vs",
      "path": "./themes/assembly-light.json"
    }],
    "semanticTokenTypes": [
      {
        "id": "labelDefinition",
        "superType": "entity",
        "description": "Z80 Assembly label definition"
      },
      {
        "id": "labelReference",
        "superType": "entity",
        "description": "Z80 Assembly label reference"
      },
      {
        "id": "variableDefinition",
        "superType": "entity",
        "description": "Z80 Assembly variable definition"
      },
      {
        "id": "variableReference",
        "superType": "entity",
        "description": "Z80 Assembly variable reference"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "assembly",
        "scopes": {
          "labelDefinition": ["entity.name.label.assembly"],
          "labelReference": ["entity.name.label.assembly"],
          "variableDefinition": ["entity.name.variable.assembly"],
          "variableReference": ["entity.name.variable.assembly"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
