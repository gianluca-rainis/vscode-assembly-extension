{
  "name": "Z80 Assembly Light",
  "type": "light",
  "colors": {
    "editor.background": "#E9E9E9FF",
    "editor.foreground": "#1e1e1e",
    "editor.lineNumberColor": "#858585",
    "editor.lineHighlightBackground": "#C4C4C4FF",
    "editor.selectionBackground": "#9FB9D3FF",
    "editor.inactiveSelectionBackground": "#BEBEBEFF",
    "editorCursor.foreground": "#585858FF",
    "editorWhitespace.foreground": "#2B2B2EFF",
    "editorIndentGuide.background": "#3e3e42",
    "editor.wordHighlightBackground": "#9B9B9BFF",
    "editorBracketMatch.background": "#d4d4d4",
    "editorBracketMatch.border": "#000000FF"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": [
        "comment.line.semicolon.assembly",
        "comment.line.hash.assembly",
        "comment.block.assembly"
      ],
      "settings": {
        "foreground": "#007022FF",
        "fontStyle": "italic"
      }
    },
    {
      "name": "String",
      "scope": [
        "string.quoted.double.assembly",
        "string.quoted.single.assembly",
        "string.quoted.grave.assembly"
      ],
      "settings": {
        "foreground": "#BD5500FF"
      }
    },
    {
      "name": "String Escape",
      "scope": "constant.character.escape.assembly",
      "settings": {
        "foreground": "#7C5D06FF"
      }
    },
    {
      "name": "Number Decimal",
      "scope": "constant.numeric.decimal.assembly",
      "settings": {
        "foreground": "#40B800FF"
      }
    },
    {
      "name": "Number Hex",
      "scope": "constant.numeric.hex.assembly",
      "settings": {
        "foreground": "#40B800FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Number Binary",
      "scope": "constant.numeric.binary.assembly",
      "settings": {
        "foreground": "#40B800FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Number Octal",
      "scope": "constant.numeric.octal.assembly",
      "settings": {
        "foreground": "#40B800FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Label",
      "scope": "entity.name.label.assembly",
      "settings": {
        "foreground": "#00A6CFFF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Variable",
      "scope": "entity.name.variable.assembly",
      "settings": {
        "foreground": "#677200FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Instruction/Assembler",
      "scope": "keyword.assembler.assembly",
      "settings": {
        "foreground": "#D68100FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Instruction/Mnemonic",
      "scope": "keyword.mnemonic.assembly",
      "settings": {
        "foreground": "#005ACFFF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Register",
      "scope": "variable.register.assembly",
      "settings": {
        "foreground": "#921F88FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Other",
      "scope": "keyword.other.assembly",
      "settings": {
        "foreground": "#B269E2FF",
        "fontStyle": "bold"
      }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "labelDefinition": {
      "foreground": "#00A6CFFF",
      "fontStyle": "bold"
    },
    "labelReference": {
      "foreground": "#00A6CFFF",
      "fontStyle": "bold"
    },
    "variableDefinition": {
      "foreground": "#677200FF",
      "fontStyle": "bold"
    },
    "variableReference": {
      "foreground": "#677200FF",
      "fontStyle": "bold"
    }
  }
}
