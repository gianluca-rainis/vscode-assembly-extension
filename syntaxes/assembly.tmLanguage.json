{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Assembly",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#instructions"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#directives"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.assembly",
          "match": ";.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.assembly",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.assembly",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.grave.assembly",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.assembly",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.assembly",
          "match": "\\b[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.assembly",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.assembly",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.assembly",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*:"
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "name": "keyword.mnemonic.assembly",
          "match": "(?i)\\b(mov|movl|movq|movb|movw|add|sub|mul|div|imul|idiv|xor|and|or|not|shl|shr|sal|sar|rol|ror|lea|push|pop|call|ret|jmp|je|jne|jz|jnz|jl|jg|jle|jge|ja|jb|jae|jbe|jo|jno|js|jns|ldr|str|ldm|stm|add|sub|mul|cmp|b|bl|beq|bne|blt|bgt|ble|bge|lw|sw|addi|beq|bne)\\b",
          "captures": {
            "1": {
              "name": "keyword.mnemonic.assembly"
            }
          }
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.register.assembly",
          "match": "(?i)\\b(rax|rbx|rcx|rdx|rsi|rdi|rbp|rsp|r8|r9|r10|r11|r12|r13|r14|r15|eax|ebx|ecx|edx|esi|edi|ebp|esp|ax|bx|cx|dx|si|di|bp|sp|al|bl|cl|dl|sil|dil|bpl|spl|ah|bh|ch|dh|r0|r1|r2|r3|r4|r5|r6|r7|r8|r9|r10|r11|r12|r13|r14|r15|lr|pc|sp|fp|ip|a|b|c|d|e|h|l|bc|de|hl|sp|af|ix|iy)\\b"
        }
      ]
    }
  },
  "scopeName": "source.assembly"
}