{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Assembly",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#variable"
    },
    {
      "include": "#assembler"
    },
    {
      "include": "#instructions"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#other"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.assembly",
          "match": "(;|#).*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.assembly",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.assembly",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.grave.assembly",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.assembly",
          "match": "\\b(0[xX][0-9a-fA-F]+|[0-9a-fA-F]+h)\\b"
        },
        {
          "name": "constant.numeric.binary.assembly",
          "match": "\\b([bB][01]+|0[bB][01]+)\\b"
        },
        {
          "name": "constant.numeric.octal.assembly",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.assembly",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.assembly",
          "match": "^\\s*([a-zA-Z_.][a-zA-Z0-9_.]*)\\s*:"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s+(?i)(equ)\\b",
          "captures": {
            "1": {"name": "entity.name.variable.assembly"},
            "2": {"name": "keyword.assembler.assembly"}
          }
        }
      ]
    },
    "assembler": {
      "patterns": [
        {
          "name": "keyword.assembler.assembly",
          "match": "(?i)\\b(org|end|bits|equ|db|dw|ds|defb|dm|defm|defw|defs|seek|include|if|ifndef|else|endif|macro|endm|incbin|times|extern|section|public|rept|repti|endr|defc|align|define|defgroup|defvars)\\b"
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "name": "keyword.mnemonic.assembly",
          "match": "(?i)\\b((adc|add|and|bit|call|ccf|cp|cpd|cpdr|cpi|cpir|cpl|daa|dec|djnz|ei|ex|exx|halt|im|in|inc|ind|indr|ini|inir|jp|jr|ld|ldd|lddr|ldi|ldir|neg|nop|or|otdr|otir|out|outd|outi|pop|push|res|ret|reti|retn|rl|rla|rlc|rlca|rld|rr|rra|rrc|rrca|rrd|rst|sbc|scf|set|sla|sra|srl|sub|xor)|(mov|movl|movq|movb|movw|add|sub|mul|div|imul|idiv|xor|and|or|not|shl|shr|sal|sar|rol|ror|lea|push|pop|call|ret|jmp|je|jne|jz|jnz|jl|jg|jle|jge|ja|jb|jae|jbe|jo|jno|js|jns|ldr|str|ldm|stm|add|sub|mul|cmp|bl|beq|bne|blt|bgt|ble|bge|lw|sw|addi|beq|bne))\\b",
          "captures": {
            "1": {
              "name": "keyword.mnemonic.assembly"
            }
          }
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.register.assembly",
          "match": "(?i)\\b((a|b|c|d|e|h|l|f|bc|de|hl|sp|af|ix|iy|pc|i|r)|(rax|rbx|rcx|rdx|rsi|rdi|rbp|rsp|r8|r9|r10|r11|r12|r13|r14|r15|eax|ebx|ecx|edx|esi|edi|ebp|esp|ax|bx|cx|dx|si|di|bp|sp|al|bl|cl|dl|sil|dil|bpl|spl|ah|bh|ch|dh|r0|r1|r2|r3|r4|r5|r6|r7|r8|r9|r10|r11|r12|r13|r14|r15|lr|pc|sp|fp|ip))\\b"
        }
      ]
    },
    "other": {
      "patterns": [
        {
          "name": "keyword.other.assembly",
          "match": "(?i)\\b(nz|z|nc|c|po|pe|p|m)\\b"
        }
      ]
    }
  },
  "scopeName": "source.assembly"
}