{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Z80 Assembly",
  "scopeName": "source.assembly",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#variable"
    },
    {
      "include": "#assembler"
    },
    {
      "include": "#instructions"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#other"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.assembly",
          "match": "(;|#).*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.assembly",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.assembly",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.grave.assembly",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.assembly",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.assembly",
          "match": "\\b(0[xX][0-9a-fA-F]+|[0-9a-fA-F]+h)\\b"
        },
        {
          "name": "constant.numeric.binary.assembly",
          "match": "\\b([bB][01]+|0[bB][01]+)\\b"
        },
        {
          "name": "constant.numeric.octal.assembly",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.assembly",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.assembly",
          "match": "^\\s*([a-zA-Z_.][a-zA-Z0-9_.]*)\\s*:"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s+(?i)(equ)\\b",
          "captures": {
            "1": {"name": "entity.name.variable.assembly"},
            "2": {"name": "keyword.assembler.assembly"}
          }
        }
      ]
    },
    "assembler": {
      "patterns": [
        {
          "name": "keyword.assembler.assembly",
          "match": "(?i)\\b(org|end|bits|equ|db|dw|ds|defb|dm|defm|defw|defs|seek|include|if|ifndef|else|endif|macro|endm|incbin|times|extern|section|public|rept|repti|endr|defc|align|define|defgroup|defvars)\\b"
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "name": "keyword.mnemonic.assembly",
          "match": "(?i)\\b(adc|add|and|bit|call|ccf|cp|cpd|cpdr|cpi|cpir|cpl|daa|dec|djnz|ei|ex|exx|halt|im|in|inc|ind|indr|ini|inir|jp|jr|ld|ldd|lddr|ldi|ldir|neg|nop|or|otdr|otir|out|outd|outi|pop|push|res|ret|reti|retn|rl|rla|rlc|rlca|rld|rr|rra|rrc|rrca|rrd|rst|sbc|scf|set|sla|sra|srl|sub|xor)\\b",
          "captures": {
            "1": {
              "name": "keyword.mnemonic.assembly"
            }
          }
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.register.assembly",
          "match": "(?i)\\b(a|b|c|d|e|h|l|f|bc|de|hl|sp|af|ix|iy|pc|i|r)\\b"
        }
      ]
    },
    "other": {
      "patterns": [
        {
          "name": "keyword.other.assembly",
          "match": "(?i)\\b(nz|z|nc|c|po|pe|p|m)\\b"
        }
      ]
    }
  }
}